
<form action="/Admin/FilmProviders/Add" method="post">
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Quản Lí Đối Tác Quảng Cáo</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <input type="hidden" name="ProviderID" id="ProviderID" value="0">
                    <div class="form-group">
                        <label>Tên Đối Tác Cung Cấp</label>
                        <input class="form-control" type="text" id="ProviderName" name="ProviderName" />
                    </div>
                    <div class="form-group">
                        <label>Logo</label>
                        <input id="Logo" name="Logo" type="text" class="form-control" />
                        <input type="button" value="Tải ảnh lên" onclick="BrowseServer();" class="controls" />
                    </div>
                    <div class="form-group">
                        <label>Website</label>
                        <input class="form-control" type="text" id="Website" name="Website" />
                    </div>
                    <div class="form-group">
                        <label>Tên Liên Hệ</label>
                        <input class="form-control" type="text" id="ContactName" name="ContactName" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="email" id="ContactEmail" name="ContactEmail" />
                    </div>
                    <div class="form-group">
                        <label>SDT</label>
                        <input class="form-control" type="text" id="ContactPhone" name="ContactPhone" />
                    </div>
                    <div class="form-group" hidden>
                        <label>CreatedDate</label>
                        <input class="form-control" type="text" id="CreatedDate" name="CreatedDate" value="System.DateTime.Now" />
                    </div>
                    <div class="form-group">
                        <label>Trạng Thái</label>
                        <select name="Status">
                            <option value="true">Kích hoạt</option>
                            <option value="false">Huỷ kích hoạt</option>
                        </select>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fa fa-lightbulb-o"></i>&nbsp; Đóng</button>
                    <button type="reset" class="btn btn-warning btn-sm"><i class="fa fa-map-marker"></i>&nbsp; Làm mới</button>

                    <input type="submit" name="submit" class="btn btn-success btn-sm" id="bt_sua" value="Cập Nhật" />
                    <input type="submit" name="submit" class="btn btn-success btn-sm" id="bt_them" value="Thêm" />

                </div>

            </div>
        </div>
    </div>
</form>

<script src="~/Areas/Admin/ckeditor/ckeditor.js"></script>
<script src="~/Areas/Admin/ckfinder/ckfinder.js"></script>
<script type="text/javascript">
    function BrowseServer() {
        var finder = new CKFinder();
        finder.basePath = "~/Scrips/ckfinder";
        finder.selectActionFunction = SetFileField;
        finder.popup();
    }
    function SetFileField(fileUrl) {
        document.getElementById("Logo").value = fileUrl;
    }

</script>
